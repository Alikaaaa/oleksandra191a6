<!DOCTYPE html>
<html lang="en">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <title>WEB322</title>
        <meta charset="UTF-8" /> 
        <link rel="stylesheet" href="css.css">  
    
    </head>

    <body style="background-color:rgb(184, 198, 201);">
        <!--HEADER---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->
        <div class="b-example-divider"></div>

        <header class="p-3 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/home" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <img src="/logo.png" width="50" height="50" alt="company logo">
            
            </a>
    
            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="/home" class="nav-link px-2 text-secondary">Home</a></li>
                <li><a href="/plans" class="nav-link px-2 text-white">CWH Plans Page</a></li>
                <li><a href="/dashboard" class="nav-link px-2 text-white">Dash</a></li>
            </ul>
            </div>

            <div class="text-end">
              <button type="button" class="btn btn-warning" onclick="window.location.href='/auth/logout'">Logout</button>
            </div>
        </div>
        </header>

        {{#if error}}
            <div class="alert alert-info" role="alert">
                INFO: {{error}}
            </div>
        {{else}}

        <div class="container">
            <ul class="list-group p-3">
                
                    {{#each plans}}
                    <li class="list-group-item">
                        <div class="hstack gap-3">
                            
                            <label class="form-control me-auto">{{name}} {{#if is_most_popular}}(most popular){{/if}}</label>
                            
                            <form method="post" enctype="multipart/form-data" action="/plans/edit_plan/{{name}}">
                                <button type="submit" class="btn btn-primary" name="edit" value="">Edit</button>
                            </form>
                            
                            <form method="post" enctype="multipart/form-data" action="/plans/delete_plan/{{name}}">
                                <button type="submit" class="btn btn-outline-danger" onclick="">Delete</button>
                            </form>
                            
                            <div class="vr"></div>


                            <form method="post" enctype="multipart/form-data" action="/plans/set_popular/{{name}}">
                                <button type="submit" class="btn btn-outline-danger gap-2" onclick="">Popular</button>
                            </form>
                        </div>
                    </li>
                {{else}}
                    <li class="list-group-item">
                        Not created yet.
                    </li>
                {{/each}}
           
                
            </ul>

            <form method="post" enctype="multipart/form-data" action="/plans/create_plan">
                <div class="d-grid gap-1 col-3 mx-auto p-3">
                    <button type="submit" class="btn btn-primary mb-3">Add new plan</button>
                </div>
            </form>

        {{/if}}
        </div>

    <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> 
    </body>

</html>